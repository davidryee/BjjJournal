<table class="table table-bordered table-striped">
  <tr>
    <th>Title &nbsp; &nbsp; &nbsp;</th>
    <th>Commentary</th>
    <th>Competitor</th>
    <th>Actions</th>
  </tr>

  <% @matches.each do |match| %>
  `<tr>
    <td><%= match.title%></td>
    <td><%= match.text%></td>
    <td><%= button_to match.competitor.name, match.competitor, :method => "get", :class => "btn btn-primary"%></td>

    <td><%= button_to "Delete", match, method: :delete, :class => "btn btn-danger" %></td>
  `</tr>
  <% end %>
</table>

<%= button_to "Create a new match", new_match_path, :method => "get", :class => "btn btn-primary" %>